@model projectKeonWooPark1831319.Models.DetailSaleInformation

@{
    ViewBag.Title = "Search cars";
}

<h2>Search cars</h2>

@using (@Html.BeginForm("Index", "Search", FormMethod.Get))
{
    @Html.DropDownList("Brand", ViewBag.Brands as SelectList, "--Select Brand--", new { onchange = @"form.submit();" });
    @Html.DropDownList("Model", ViewBag.Models as SelectList, "--Select Model--")
    <br />
    <input type="submit" value="Find" />
}

<hr />

<table class="table ">
    <tr>
        <th>Brand</th>
        <th>Model</th>
        <th>Price</th>
        <th>Seller</th>
    </tr>
    @for (int i = 0; i < Model.Sales.Count; i++)
    {
        <tr>
            <td>@Model.Brands[i].Name</td>
            <td>@Model.Models[i].Name</td>
            <td>$@Model.Sales[i].Price</td>
            <td>@Model.Users[i].Username</td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to Sales", "Index")
</div>