@model projectKeonWooPark1831319.Models.Sale

@{
    ViewBag.Title = "Sell Car";
}

@if (Session["userId"] == null)
{
    <h2>Please login to access this page</h2>
    @Html.ActionLink("Click to go to Login page", "Index", "User");
}
else
{
    <h2>Sell Car</h2>

    using (Html.BeginForm("SellCar", "Sale", FormMethod.Get))
    {
        <div class="form-group">
            @Html.Label("Brand", htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.DropDownList("Brand", ViewBag.Brands as SelectList, "--Select Brand--", new { onchange = @"form.submit();" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Model", htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.DropDownList("Model", ViewBag.Models as SelectList, "--Select Model--", new { onchange = @"form.submit();" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Price", htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.Editor("Price", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Price", new { @class = "text-danger " })
                @if (ViewBag.Message != null)
                {
                    <span class="text-danger">@ViewBag.Message</span>
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to Sales", "Index")
    </div>
}